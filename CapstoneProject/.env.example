NODE_ENV=development
PORT=4000
CLIENT_ORIGIN=http://localhost:5173

# Auth
JWT_SECRET=change_me_to_a_secure_random_string_min_32_chars
JWT_EXPIRES=1d
COOKIE_SECURE=false

# Mongo
MONGO_URI=mongodb://localhost:27017/mern_chat

# Provider selection
PROVIDER_DEFAULT=gemini

# Gemini (default)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (optional)
OPENAI_API_KEY=

# Dialogflow ES (optional)
GOOGLE_APPLICATION_CREDENTIALS=/secrets/gcloud.json
DIALOGFLOW_PROJECT_ID=
DIALOGFLOW_LANGUAGE_CODE=en

# Feature flags
FEATURE_WS=false
FEATURE_TOOLS=false
